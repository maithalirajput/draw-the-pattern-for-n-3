#include<stdio.h>

int main(){
    pattern(3);
}
void pattern(int n){
    for(int i=0; i<n;i++){  
        for(int j=0;j<n;j++){
            for(int l=0;l<n*i;l++){
                printf("   ");
            }
            for(int k=0;k<=j;k++){
                printf(" * ");
            }
            printf("\n");
        }
    }
}
